@article{yu2014,
  title = {Mixed-Phase Cloud Phase Partitioning Using Millimeter Wavelength Cloud Radar {{Doppler}} Velocity Spectra},
  author = {Yu, G. and Verlinde, J. and Clothiaux, E. E. and Chen, Y.-S.},
