@article{wendisch2005,
  title = {Impact of Cirrus Crystal Shape on Solar Spectral Irradiance: {{A}} Case Study for Subtropical Cirrus},
  author = {Wendisch, Manfred and Pilewskie, Peter and Pommier, John and Howard, Steve and Yang, Ping and Heymsfield, Andrew J. and Schmitt, Carl G. and Baumgardner, Darrel and Mayer, Bernhard},
  year = {2005},
